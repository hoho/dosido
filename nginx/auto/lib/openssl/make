case "$CC" in

    cl)

        cat << END                                            >> $NGX_MAKEFILE

$OPENSSL/openssl/include/openssl/ssl.h:	$NGX_MAKEFILE
	@echo "Skip building OpenSSL, we will use openssl.lib from io.js"

END

    ;;

    bcc32)

$OPENSSL/openssl/include/openssl/ssl.h:	$NGX_MAKEFILE
	@echo "Skip building OpenSSL, we will use openssl.lib from io.js"

END

    ;;

    *)

        cat << END                                            >> $NGX_MAKEFILE

$OPENSSL/.openssl/include/openssl/ssl.h:
	@echo "Skip building OpenSSL, we will use libopenssl.a from io.js"

END

    ;;

esac
